@using System.Text
@using GSF.Security
@using GSF.Web.Model
@using GSF.Web.Shared.Model
@using openHistorian
@using openHistorian.Model
@inherits ExtendedTemplateBase<AppModel>
@section StyleSheets {
    <style>
        html, body {
            height: 100%;
        }
    </style>
}
@{
    if (ViewBag.PageControlScripts == null) {
        ViewBag.PageControlScripts = new StringBuilder();
    }

    DataContext dataContext = ViewBag.DataContext;
    StringBuilder pageControlScripts = ViewBag.PageControlScripts;

    Layout = "Layout.cshtml";
    ViewBag.Title = "Action Adapters";
    ViewBag.ShowSearchFilter = true;
    ViewBag.HideExportCSVButton = true;

    ViewBag.HeaderColumns = new[]
    {   //    { "Field", "Label", "Classes" }
        new[] { "AdapterName", "Name", "text-left" },
        new[] { "TypeName", "Type", "text-left" },
        new[] { "ConnectionString", "Connection String", "text-left" },
        new[] { null, "Enabled", "text-center valign-middle" }
    };

    ViewBag.BodyRows = BodyRows().ToString();
    ViewBag.AddNewEditDialog = AddNewEditDialog(dataContext).ToString();
    ViewBag.ParentKeys = Model.Global.NodeID.ToString();

    // Prepend view model validation extension scripts to occur before normal model initialization
    // pageControlScripts.Insert(0, ExtendModelValidation().ToString().TrimStart());
}
@functions {
    public bool UserIsAdminOrEditor()
    {
        SecurityPrincipal securityPrincipal = ViewBag.SecurityPrincipal as SecurityPrincipal;

        if ((object)securityPrincipal == null)
            return false;

        return securityPrincipal.IsInRole("Administrator,Editor");
    }

    public string SettingsForm()
    {
        // This Function returns the settings Fields for the given ActionAdapter
        string result = "";
        result = result + "<!-- ko foreach: new Array(3) -->";
        result = result + "<div class='col-md-4' data-bind='foreach: $parent.ConnectionStringParameters'>";
        result = result + "<!-- ko if: ($index() %3 == $parentContext.$index()) -->";
        result = result + "<div class='form-group' data-bind=\"css: {'has-error': !fieldIsValid(Name,IsRequired), 'has-feedback': !fieldIsValid(Name,IsRequired), 'has-no-value': !fieldHasValue(Name,IsRequired)}, attr: {'title': Description}\" data-toggle='tooltip' data-trigger='focus' data-placement='auto bottom'>";

        result = result + EnumField();
        result = result + BoolField();
        result = result + TextField();

        result = result + "</div>";
        result = result + "<!-- /ko -->";
        result = result + "</div>";
        result = result + "<!-- /ko -->";
        return result;
    }

    private string EnumField()
    {
        string result = "";
        result = result + "<!-- ko if: IsEnum -->";
        result = result + "<label data-bind=\"text: Name, attr: {'for': Name}\"></label>";
        result = result + " <select class='form-control' data-bind=\"value: Value, options: EnumValues, valueAllowUnset: !IsRequired, attr: {'id': Name, 'disabled': ($root.recordMode()===RecordMode.View ? true : undefined)}\"></select>";
        result = result + "<!-- /ko -->";
        return result;
    }

    private string BoolField()
    {
        string result = "";
        result = result + "<!-- ko if: IsBoolean -->";
        result = result + "<label data-bind=\"text: Name\"></label>";
        result = result + "<div>";
        result = result + "<input type='radio' value='True' data-bind=\"checkded: Value, attr: {'name': Name, 'disabled': ($root.recordMode()===RecordMode.View ? true : undefined)}\" />";
        result = result + "<span>True</span>";
        result = result + "<input type='radio' value='False' data-bind=\"checkded: Value, attr: {'name': Name, 'disabled': ($root.recordMode()===RecordMode.View ? true : undefined)}\" />";
        result = result + "<span>False</span>";
        result = result + "</div>";
        result = result + "<!-- /ko -->";
        return result;
    }

    private string TextField()
    {
        string result = "";
        result = result + "<!-- ko if: IsOther -->";
        result = result + "<label data-bind=\"text: Name, attr: {'for': Name}\"></label>";
        result = result + "<input type='text' class='form-control' data-bind=\"textInput: Value, attr: {'id': Name, 'readonly': ($root.recordMode()===RecordMode.View ? true : undefined)}\" />";
        result = result + " <!-- /ko -->";
        return result;
    }

    private string CustomField()
    {
        return "";
    }

}
@helper BodyRows()
{
    <td width="25%" class="text-left valign-middle"><button type="button" class="btn btn-link" data-bind="text: AdapterName"></button></td>
    <td width="30%" class="text-left valign-middle" data-bind="text: TypeName"></td>
    <td width="35%" class="text-left table-cell-hard-wrap"><div data-bind="text: notNull(ConnectionString).truncate(30), attr: { title: notNull(ConnectionString) }"></div></td>
    <td width="5%" class="text-center valign-middle"><input type="checkbox" data-bind="checked: Enabled, click: enabledStateChanged.bind($data)" /></td>
    <td width="5%" class="text-center valign-middle" nowrap>
        <button type="button" class="btn btn-xs" data-bind="click: showEditScreen.bind($data, @(UserIsAdminOrEditor().ToString().ToLower())), enable: $parent.dataHubIsConnected"><span class="glyphicon glyphicon-pencil"></span></button>
        <button type="button" class="btn btn-xs" data-bind="click: $parent.removePageRecord, enable: $parent.dataHubIsConnected"><span class="glyphicon glyphicon-remove"></span></button>
    </td>
}
@helper AddNewEditDialog(DataContext dataContext)
{
    <div class="col-md-12">
        <div class="col-md-6">
            @Raw(dataContext.AddInputField<CustomActionAdapter>("ID", customDataBinding: "disable: true", groupDataBinding: "visible: $root.recordMode() !== RecordMode.AddNew"))
            @Raw(dataContext.AddInputField<CustomActionAdapter>("AdapterName", fieldLabel: "Name"))
        </div>
        <div class="col-md-6">
            @Raw(dataContext.AddInputField<CustomActionAdapter>("TypeName", customDataBinding: "disable: true"))
            <div class="form-inline pull-right">
                @Raw(dataContext.AddCheckBoxField<CustomActionAdapter>("Enabled"))
            </div>
        </div>
    </div>
    <div class="col-md-12">
        @Raw(SettingsForm())
    </div>
}

@Html.RenderResource("GSF.Web.Model.Views.PagedViewModel.cshtml")

@section Scripts {
    <script>
        var modbusProtocolID = 0;

        @Raw(dataContext.RenderViewModelConfiguration<CustomActionAdapter, DataHub>(ViewBag, "AdapterName", null))

        $(window).on("hubConnected", function() {
            if (modbusProtocolID === 0) {
                dataHub.getModbusProtocolID().done(function(protocolID) {
                    modbusProtocolID = protocolID;
                });
            }
        });

         function showEditScreen(editable, record) {
            if (editable)
                viewModel.editPageRecord(record);
            else
                viewModel.viewPageRecord(record);
        }

        function enabledStateChanged(record) {
            if (hubIsConnected) {
                record.Enable = !record.Enable;

                dataHub.updateCustomActionAdapter(record).done(function() {
                    viewModel.queryPageRecords();
                    refreshEnabledState(record);
                });
            }
        }

        function refreshEnabledState(record) {
            if (!hubIsConnected)
                return;

            if (record.Enabled)
                serviceHub.sendCommand("initialize " + record.AdapterName);
            else
                serviceHub.sendCommand("reloadconfig");
        }
    </script>
}
